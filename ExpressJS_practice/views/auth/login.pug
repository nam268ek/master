
extends ../user/layouts/common.pug
block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='#') CodersX tokyo
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
    .container
        h1 Login
        if errors
            each err in errors
                .alert.alert-danger= err
        
        form(method="POST")
            label(for='email') Email
            input#email.form-control.w-25.p-3(type="text" name="email" value=email)
            label(for='pass') Password
            input#pass.form-control.w-25.p-3(type="password" name="password")
            button.btn.btn-primary.m-2 Login
        