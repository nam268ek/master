
extends ../user/layouts/common.pug
block content
        h1 Create
        if errors
            each err in errors
                .alert.alert-danger= err

        form(action="/user/create", method="POST")
            label(for='name') Name
            input#name.form-control.w-25.p-3(type="text" name="name" value=name)
            label(for='email') Email
            input#email.form-control.w-25.p-3(type="text" name="email" value=email)
            label(for='pass') Password
            input#pass.form-control.w-25.p-3(type="password" name="password" value=pass)
            button.btn.btn-primary.m-2 Create
        